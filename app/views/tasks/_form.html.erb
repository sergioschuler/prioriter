<%= form_for(@task, remote: true, html: { role: "form", class: "form-inline" }) do |f| %>
    <%= f.check_box :completed, class: "hidden" %>
    <div class="form-group">
    	<%= f.text_field :description, class: "form-control", placeholder: "Write your task..." %>
    </div>
    <div class="form-group">
    	<%= f.text_field :deadline, class: "form-control", :value => Date.today %>
    </div>
    <%= f.submit "Create", class: "btn btn-sucess" %>
  
<% end %>
