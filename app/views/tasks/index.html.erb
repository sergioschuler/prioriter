<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 text-center col-centered">
      <h1>Today's To-do</h1>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-12 col-md-8 col-centered">
      <%= link_to 'New Task', new_task_path %>
    </div>
  </div>
  <% @tasks.each do |task| %>
    <div class="row">
      <div class="col-xs-12 col-md-8 col-centered">
        <div class="task">
          <%= best_in_place task, 
               :completed, 
               type: :checkbox, 
               collection: [raw("<i class='glyphicon glyphicon-unchecked'></i>"), 
                            raw("<i class='glyphicon glyphicon-check'></i>")] %>
            
          <%= best_in_place task, :description, { :classes => "input_field" } %>

          <%= link_to '', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy-btn glyphicon glyphicon-trash" %>
        </div>
      </div>
    </div>
  <% end %>
  
</div><!-- /.container -->

