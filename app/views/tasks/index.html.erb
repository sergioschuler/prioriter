<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Completed</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= best_in_place task, 
           :completed, 
           type: :checkbox, 
           collection: [raw("<i class='glyphicon glyphicon-unchecked'></i>"), 
                        raw("<i class='glyphicon glyphicon-check'></i>")] %>
        </td>
        <td><%= best_in_place task, :description %></td>
        <!-- <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td> -->
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

